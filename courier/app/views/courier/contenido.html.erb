<html>
	<body onload="initialize()">

		<div class="post">
			<div id='error'>
				<h3><%= flash[:error]%></h3>
			</div>
			<h2 class="title">
			<a href="#">Bienvenido
			<% if !(session[:email].nil?) %>
			<%= "" + session[:nombre] + " " + session[:apellido] %>
			<%end%></a>
			</h2>
			<p class="meta">
				<span class="date"></span>
				<span class="posted"></span>
			</p>
			<div style="clear: both;">
				&nbsp;
			</div>
			<div class="entry" >
				<div id="map_canvas" style="width:100%; height:50%">
				</div>
			</div>
		</div>
	</body>
	<script type="text/javascript" src="http://maps.google.com/maps/api/js?sensor=true"></script>
	<script type="text/javascript">
		var map;
		var posicion;

		function initialize() {
			var myLatlng = new google.maps.LatLng(10.5,-66.91667);
			var myOptions = {
				zoom: 12,
				center: myLatlng,
				mapTypeId: google.maps.MapTypeId.ROADMAP
			}
			map = new google.maps.Map(document.getElementById("map_canvas"), myOptions);

			google.maps.event.addListener(map, 'click', function(event) {
				placeMarker(event.latLng);
			});
		}

		function placeMarker(location) {
			var clickedLocation = new google.maps.LatLng(location);
			var marker = new google.maps.Marker({
				position: location,
				map: map
			});
			// alert (marker.getPosition().toString());
			document.getElementById("buscar").value = marker.getPosition().lat();
			map.setCenter(location);
		}
	</script>
</html>
