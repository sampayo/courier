<html>
	<head>
		<title>Courier</title>
		<%= stylesheet_link_tag :all %>
		<%= javascript_include_tag :defaults %>
		<%= csrf_meta_tag %>
	</head>
	<body>

		<div id="wrapper">
			<div id="header">
				<div id="logo">
					<h1>
					<a href="#">Courier UCAB</a>
					</h1>
				</div>
			</div>
			<!-- end #header -->
			<div id="menu">
				<ul>
					<li class="current_page_item">
						<a href="<%= cont_path %>">Principal</a>
					</li>
					<li>
						<a href="#">Seguimiento de Paquetes</a>
					</li>
				</ul>
				<ul>
					<li>
						<div id='salir'>
							<%= link_to 'Salir',  root_url, :action=> :destruir %>
						</div>
					</li>
				</ul>
			</div>
			<!-- end #menu -->
			<div id="page">
				<div id="page-bgtop">
					<div id="page-bgbtm">
						<div id="content">
							<%= yield %>

							<div style="clear: both;">
								&nbsp;
							</div>
						</div>
						<!-- end #content -->
						<div id="sidebar">
							<ul>
								<li>
									<h2>Datos</h2>
									<ul id='datos'>
										<li>
											Nombre:<%= " "+ $nombre %>
										</li>
										<li>
											Email: <%= $email %>
										</li>
									</ul>
								</li>
								<li>
									<h2>Categories</h2>
									<ul>
										<li>
											<%= link_to 'Direcciones', direccions_path %>
										</li>
										<li>
											<%= link_to 'Tarjeta de credito', tipo_pagos_path %>
										</li>
										<li>
											<%= link_to 'Ordenes', ordens_path %>
										</li>
										<li>
											<%= link_to 'Facturas', facturas_path %>
										</li>
									</ul>
								</li>
								<li>
									<h2>Despachar</h2>
									<ul>
										<li>
											<%= link_to 'Asignar rutas', '/despachar' %>
										</li>
										<li>
											<%= link_to 'Solicitar apoyo', tipo_pagos_path %>
										</li>
										<li>
											<%= link_to 'Simular', tipo_pagos_path %>
										</li>

									</ul>
								</li>
								<li>
									<h2>Recolectar</h2>
									<ul>
										<li>
											<%= link_to 'Rutas Asignadas', direccions_path %>
										</li>
										<li>
											<%= link_to 'notificar recoleccion', tipo_pagos_path %>
										</li>

									</ul>
								</li>
							</ul>
						</div>
						<div style="clear: both;">
							&nbsp;
						</div>
					</div>
				</div>
			</div>
			<!-- end #page -->
		</div>
		<div id="footer">
		</div>
		<!-- end #footer -->
	</body>
</html>
