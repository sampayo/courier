<html>
	<head>
		<title>Courier</title>
		<%= stylesheet_link_tag :all %>
		<%= javascript_include_tag :defaults %>
		<%= csrf_meta_tag %>
	</head>
	<body>

		<div id="wrapper">
			<div id="header">
				<div id="logo">
					<h1>
					<a href="#">Courier UCAB</a>
					</h1>
				</div>
			</div>
			<!-- end #header -->
			<div id="menu">
				<ul>
					<li class="current_page_item">
						<a href="<%= cont_path %>">Home</a>
					</li>
					<li>
						<a href="#">Blog</a>
					</li>
					<li>
						<a href="#">Photos</a>
					</li>
					<li>
						<a href="#">About</a>
					</li>
					<li>
						<a href="#">Links</a>
					</li>
					<li>
						<a href="#">Contact</a>
					</li>
				</ul>
				<ul><li><div id='salir'> <%= link_to 'Salir',  root_url, :action=> :destruir %></div></li></ul>
			</div>
			<!-- end #menu -->
			<div id="page">
			<div id="page-bgtop">
				<div id="page-bgbtm">
					<div id="content">
						<%= yield %>
					
						<div style="clear: both;">
							&nbsp;
						</div>
					</div>
					<!-- end #content -->
					<div id="sidebar">
						<ul>
							<li>
								<div id="search" >
									<form method="get" action="#">
										<div>
											<input type="text" name="s" onChange="placeMarker();" id="buscar" value="" />
											<input type="submit" id="search-submit" value="GO" />
										</div>
									</form>
								</div>
								<div style="clear: both;">
									&nbsp;
								</div>
							</li>
							<li>
								<h2>Datos</h2>
								<ul id='datos'>
									<li>
										Nombre:<%=" "+ $nombre %>
									</li>
									<li>
										Email: <%= $email %>
									</li>
								</ul>
							</li>
							<li>
								<h2>Categories</h2>
								<ul>
									<li>
										<%= link_to 'Direcciones', direccions_path %>
									</li>
									<li>
										<%= link_to 'Targeta de credito', tipo_pagos_path %>
									</li>
									<li>
										<%= link_to 'Ordenes', ordens_path %>
									</li>

								</ul>
							</li>
							<li>
							
							</li>
						</ul>
					</div>
					<div style="clear: both;">
						&nbsp;
					</div>
				</div>
			</div>
		</div>
			<!-- end #page -->
		</div>
		<div id="footer">
			<p>
				Copyright (c) 2008 Sitename.com. All rights reserved. Design by
				<a href="http://www.freecsstemplates.org/">Free CSS Templates</a>.
			</p>
