<html>
	<body onload="initialize()">

		<div id="form_container">
			<h1>
			<a>.</a>
			</h1>
			<div id="form1">
				<%= form_for(:recolectar, :url => {:action => 'save'}, :html=>{:onsubmit=> "validar();", :name => "form"} ) do |f| %>
				<div class="form_description">
					<h2><%= t('notificarrecolector') %></h2>
					<p>
						<%= t('buscarpororden') %>
					</p>
				</div>
				<ul >

					<li id="li_2" >
						<label class="description" for="element_2">
							<%= t('recolector') %>
						</label>
						<div>
							<%= @personas.nombre + " " + @personas.apellido
%>
						</div>
					</li>
					<li id="li_3" >
						<label class="description" for="element_3">
							<%= t('buscar') %>
						</label>
						<div class="form_description">
							<p>
								<%= t('indiqueorden') %>
								<br/>
							</p>
							<p id="error2">
								<%= notice %>
							</p>
						</div>
						<span>
							<%= f.text_field :nombre,:size =>18 %>
							<label>
								<%= t('buscar') %>
							</label>
						</span>
						<span>
							<input id="search-submit" class="search-submit" type="submit" name="submit" value="Enviar" />
						</span>
					</li>
				</ul>
				<% end %>
			</div>
		</div>
